<main class="text-center form-signin">

   
    <h1 class="h3 mb-3 fw-normal">Please Sign In</h1>
      <div id="status"></div>

  <form method="POST" action="/signin" >
  
    <div class="form-floating">
       <label for="email" class="email">Username</label> 
        <input id="username" type="email"  name="username" class="form-control" id="floatingInput" placeholder="name@example.com" required>
    
    </div>
  
   <label for="password" class="password">Password</label>
   
     <input id="password" name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>

    </div>

    
   
      <button id="signin" class="btn btn-lg btn-primary btn-block mb-4" type="submit">Sign In</button>

   
   </form>

 
 
    <button onclick="window.location.href='/signup'"  class="btn btn-lg btn-secondary btn-block mb-4">Sign Up</button>
                                                   
   
